{
    "name": "nightschool-studio/blank-woocommerce-theme-installer",
    "description": "Nightschool Studio WP Install for WooCommerce Projects",
    "version": "0.1.0",
    "author": "Magalie Chetrit",
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        }
    ],
    "require": {
        "wpackagist-theme/storefront":"*",
        "wpackagist-plugin/woocommerce": "*"
    },

    "extra": {
        "installer-paths": {
            "wp-content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "wp-content/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        }
    }
}